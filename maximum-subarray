//53. Maximum Subarray

class Solution {
public:
    int macSm(vector<int> &nums){
        int maxSum=nums[0],currentSum=0;
        for(int i=0;i<nums.size();++i){
            currentSum+=nums[i];
            if(currentSum>maxSum){
                maxSum=currentSum;
            }
            if(currentSum<0)
                currentSum=0;
        }
        return maxSum;
    }
    int maxSubArray(vector<int>& nums) {
        return macSm(nums);
    }
};
